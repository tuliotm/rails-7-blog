<div class="card bg-light mb-3">
  <div class="cardy-body">
    <h4><%= link_to post.title, post %></h4>

    <div class="text-muted mb-2">
      <em>Por <%= post.author %> (<%= l(post.created_at, format: :short) %>)</em>
    </div>

    <p><%= post.body.truncate(200) %></p>

    <p class='text-muted'><%= pluralize(post.comments.count, 'Comentário', 'Comentários') %></p>

    <%= link_to "Ler Artigo", post_path(post), class: 'btn btn-primary btn-sm' %>
    <%= link_to "Editar", edit_post_path(post), class: 'btn btn-secondary btn-sm' %>
    <%= link_to "Apagar", post, method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: 'Você tem certeza?' } %>
  </div>
</div>