<div class="shadow bg-light p-5 rounded">
  <div class ="text-center mb-5">
     <h1><%= @post.title %></h1>

    <p class='text-muted'>
      <strong>Por <%= @post.author %></strong><br>
      <%= l(@post.created_at, format: :long) %>
    </p> 
  </div>

  <div class="px5">
    <%= @post.body.gsub("\n", "<br>").html_safe %>
  </div>
</div>

  <div class="m-5">
    <div class="Text-center">
      <h4>
        <%= pluralize(@post.comments.count, 'Comentário', 'Comentários') %>

        <% if @post.comments.count.zero? %>
          <span class='badge badge-primary'>Seja o primeiro a comentar!</span>
        <% end %>
      </h4>
  </div>
</div>